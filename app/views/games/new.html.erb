<div class="container">
  <h1>NEW GAME</h1>
  <div class="flexbox">
    <% @letters.each do |letter| %>
      <div class="letter">
        <%= letter %>
      </div>
    <% end %>
  </div>

  <form action="/score" method="post" data-turbo="false">
  <!-- ... -->
  <input id="input" type="text" name="word" placeholder="Type your word">
  <input id="play" type="submit" name="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
</form>
</div>
